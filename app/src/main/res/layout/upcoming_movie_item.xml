<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cardview_default_elevation"
        android:layout_marginLeft="@dimen/cardview_default_elevation"
        android:layout_margin="@dimen/cardview_default_radius">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/txtOriginalLanguageLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language: "
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/txtOriginalLanguage"
                app:layout_constraintStart_toStartOf="@+id/txtOriginalLanguage"
                app:layout_constraintTop_toBottomOf="@+id/txtTitle"
                app:layout_constraintVertical_bias="0.458" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="160dp"
                android:layout_height="38dp"
                android:lines="2"
                android:maxLines="4"
                android:singleLine="false"
                android:text="Title:"
                app:layout_constraintBottom_toTopOf="@+id/txtOriginalLanguageLabel"
                app:layout_constraintStart_toStartOf="@+id/txtOriginalLanguageLabel"
                app:layout_constraintTop_toBottomOf="@+id/txtTitleLabel"
                app:layout_constraintVertical_bias="0.251" />

            <TextView
                android:id="@+id/txtReleaseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.583"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtReleaseDateLabel"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/txtReleaseDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Released:"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/txtReleaseDate"
                app:layout_constraintStart_toStartOf="@+id/txtReleaseDate"
                app:layout_constraintTop_toBottomOf="@+id/txtOriginalLanguage"
                app:layout_constraintVertical_bias="0.832" />

            <TextView
                android:id="@+id/txtOriginalLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language"
                app:layout_constraintBottom_toTopOf="@+id/txtReleaseDateLabel"
                app:layout_constraintStart_toStartOf="@+id/txtReleaseDateLabel"
                app:layout_constraintTop_toBottomOf="@+id/txtOriginalLanguageLabel" />

            <ImageView
                android:id="@+id/imvPosterPath"
                android:layout_width="125dp"
                android:layout_height="158dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.055"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/dr_who_poster"></ImageView>

            <TextView
                android:id="@+id/txtComingSoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coming Soon"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.916"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txtTitleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title:"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/txtComingSoon"
                app:layout_constraintStart_toStartOf="@+id/txtTitle"
                app:layout_constraintTop_toTopOf="@+id/txtComingSoon"
                app:layout_constraintVertical_bias="0.051" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>